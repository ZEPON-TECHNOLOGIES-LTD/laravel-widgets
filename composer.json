{
    "name": "rinvex/widgets",
    "description": "Rinvex Widgets is a powerful and easy to use widget system, that combines the both the power of code logic and the flexibility of template views. You can create asynchronous widgets, reloadable widgets, and use the console generator to auto generate your widgets, all out of the box.",
    "keywords": [
        "ajax",
        "async",
        "rinvex",
        "widgets",
        "cache",
        "page",
        "cms"
    ],
    "license": "MIT",
    "homepage": "https://rinvex.com",
    "support": {
        "email": "help@rinvex.com",
        "issues": "https://github.com/rinvex/widgets/issues",
        "source": "https://github.com/rinvex/widgets",
        "docs": "https://github.com/rinvex/widgets/blob/master/README.md"
    },
    "authors": [
        {
            "name": "Rinvex LLC",
            "homepage": "https://rinvex.com",
            "email": "help@rinvex.com"
        },
        {
            "name": "Abdelrahman Omran",
            "homepage": "https://omranic.com",
            "email": "me@omranic.com",
            "role": "Project Lead"
        },
        {
            "name": "The Generous Laravel Community",
            "homepage": "https://github.com/rinvex/widgets/contributors"
        }
    ],
    "require": {
        "php": "^7.0.0",
        "illuminate/view": "~5.5.0",
        "illuminate/support": "~5.5.0",
        "illuminate/routing": "~5.5.0",
        "illuminate/console": "~5.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.0",
        "illuminate/container": "~5.5.0"
    },
    "autoload": {
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Rinvex\\Widgets\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rinvex\\Widgets\\Test\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rinvex\\Widgets\\Providers\\WidgetsServiceProvider"
            ],
            "aliases": {
                "Widget": "Rinvex\\Widgets\\Facades\\Widget",
                "AsyncWidget": "Rinvex\\Widgets\\Facades\\AsyncWidget"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
